FUNCTION(OV_SET_PROJECT_VERSION)
	SET(PROJECT_VERSION_MAJOR ${OV_GLOBAL_VERSION_MAJOR})

	SET(PROJECT_VERSION_MAJOR ${OV_GLOBAL_VERSION_MAJOR} PARENT_SCOPE)
	SET(PROJECT_VERSION_MINOR ${OV_GLOBAL_VERSION_MINOR})
	SET(PROJECT_VERSION_PATCH ${OV_GLOBAL_VERSION_PATCH})
	SET(PROJECT_VERSION ${PROJECT_VERSION_MAJOR}.${PROJECT_VERSION_MINOR}.${PROJECT_VERSION_PATCH} PARENT_SCOPE)

	# get the name of the current branch
	EXECUTE_PROCESS(COMMAND git rev-parse --abbrev-ref HEAD
		WORKING_DIRECTORY ${CMAKE_SOURCE_DIR}
		OUTPUT_VARIABLE OV_PROJECT_BRANCH_STRING)
	# command output may contain carriage return
	STRING(REGEX REPLACE "\n" "" OV_PROJECT_BRANCH_STRING "${OV_PROJECT_BRANCH_STRING}")

	SET(OV_PROJECT_BRANCH ${OV_PROJECT_BRANCH_STRING} PARENT_SCOPE)

	# get the short hash of the current HEAD
	EXECUTE_PROCESS(COMMAND git rev-parse --short HEAD
		WORKING_DIRECTORY ${CMAKE_SOURCE_DIR}
		OUTPUT_VARIABLE OV_PROJECT_COMMITHASH_STRING)
	# command output may contain carriage return
	STRING(REGEX REPLACE "\n" "" OV_PROJECT_COMMITHASH_STRING "${OV_PROJECT_COMMITHASH_STRING}")

	SET(OV_PROJECT_COMMITHASH ${OV_PROJECT_COMMITHASH_STRING} PARENT_SCOPE)

ENDFUNCTION(OV_SET_PROJECT_VERSION)

